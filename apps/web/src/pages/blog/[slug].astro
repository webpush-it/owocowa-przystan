---
import Layout from '../../layouts/Layout.astro'
import { PortableText } from "astro-portabletext"
import { sanityClient, urlFor } from '../../lib/sanity'
import PortableTextImage from '../../components/PortableTextImage.astro'

// 1. Generowanie ścieżek
export async function getStaticPaths() {
    const posts = await sanityClient.fetch(`*[_type == "post"]{ slug }`);
    return posts.map((post) => ({
        params: { slug: post.slug.current },
    }));
}

// 2. Pobieranie danych posta
const { slug } = Astro.params;
const post = await sanityClient.fetch(`*[_type == "post" && slug.current == $slug][0]`, { slug });

if (!post) return Astro.redirect("/404");

// 3. Konfiguracja komponentów dla treści (żeby zdjęcia w tekście działały)
const components = {
    type: {
        image: PortableTextImage,
    },
};
---

<Layout title={`${post.title} - Owocowa Przystań`}>
    <main class="bg-stone-50 min-h-screen py-12 md:py-20">

        <article class="container mx-auto px-4 max-w-3xl">

            <nav class="mb-8">
                <a href="/blog" class="group inline-flex items-center text-sm font-medium text-green-700 hover:text-green-900 transition-colors">
                    <span class="mr-2 transform group-hover:-translate-x-1 transition-transform">←</span>
                    Wróć do wszystkich wpisów
                </a>
            </nav>

            <header class="mb-10 text-center">
                <div class="flex items-center justify-center space-x-2 text-stone-500 text-sm mb-4 uppercase tracking-wider font-medium">
                    <time datetime={post.publishedAt}>
                        {new Date(post.publishedAt).toLocaleDateString('pl-PL', {
                            day: 'numeric', month: 'long', year: 'numeric'
                        })}
                    </time>
                    <span>•</span>
                    <span>Blog</span>
                </div>

                <h1 class="text-3xl md:text-5xl font-bold text-stone-800 font-serif leading-tight mb-8">
                    {post.title}
                </h1>

                {post.mainImage && (
                        <div class="relative w-full aspect-video rounded-2xl overflow-hidden shadow-xl mb-12">
                            <img
                                    src={urlFor(post.mainImage).width(1200).height(800).url()}
                                    alt={post.title}
                                    class="absolute inset-0 w-full h-full object-cover transform hover:scale-105 transition-transform duration-700 ease-out"
                            />
                        </div>
                )}
            </header>

            <div class="prose prose-lg prose-stone max-w-none
                  prose-headings:font-serif prose-headings:text-stone-800
                  prose-a:text-green-700 prose-a:no-underline hover:prose-a:underline
                  prose-img:rounded-xl prose-img:shadow-lg
                  bg-white p-8 md:p-12 rounded-2xl shadow-sm border border-stone-100">

                <PortableText value={post.body} components={components} />

            </div>

            <div class="mt-12 pt-8 border-t border-stone-200 text-center">
                <p class="text-stone-600 italic">
                    Podobał Ci się ten wpis? <br/>
                    Zajrzyj do nas na <a href="/kontakt" class="text-green-700 font-bold hover:underline">Owocową Przystań</a> po świeże zbiory!
                </p>
            </div>

        </article>
    </main>
</Layout>
