---
// Zmieniamy import na wirtualny modu≈Ç dostarczany przez integracjƒô
import { sanityClient } from "sanity:client";
import imageUrlBuilder from "@sanity/image-url";

// Konfiguracja buildera obraz√≥w
const builder = imageUrlBuilder(sanityClient);

function urlFor(source) {
    return builder.image(source);
}

// Zapytanie pozostaje bez zmian
const query = `{
  "settings": *[_type == "pageSettings"][0],
  "workshops": *[_type == "workshop"]
}`;

const { settings, workshops } = await sanityClient.fetch(query);
---

<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Owocowa Przysta≈Ñ - Zagroda Edukacyjna</title>
    <style>
        :root {
            --primary: #2d5a27; /* Zielony le≈õny */
            --secondary: #d94126; /* Jab≈Çkowa czerwie≈Ñ */
            --accent: #f4e285; /* S≈Çoneczny ≈º√≥≈Çty */
            --bg: #fffcf5; /* Kremowy papier */
        }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: var(--bg); color: #333; margin: 0; }

        header { background: var(--primary); color: white; padding: 4rem 1rem; text-align: center; }
        .container { max-width: 1000px; margin: 0 auto; padding: 2rem; }

        h1 { font-size: 3rem; margin: 0; }
        h2 { color: var(--primary); border-bottom: 2px solid var(--accent); display: inline-block; }

        .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-top: 2rem; }
        .card { background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.05); transition: transform 0.3s ease; }
        .card:hover { transform: translateY(-5px); }
        .card img { width: 100%; height: 200px; object-fit: cover; }
        .card-content { padding: 1.5rem; }

        .topics-list { background: var(--accent); padding: 2rem; border-radius: 20px; columns: 2; }

        footer { text-align: center; padding: 3rem; background: #eee; margin-top: 4rem; }
        .btn { background: var(--secondary); color: white; padding: 0.8rem 1.5rem; text-decoration: none; border-radius: 30px; font-weight: bold; }
    </style>
</head>
<body>

<header>
    <h1>üçé Owocowa Przysta≈Ñ</h1>
    <p>Miejsce wype≈Çnione barwami i smakami natury</p>
</header>

<main class="container">
    <section id="o-nas">
        <h2>O nas</h2>
        <p style="font-size: 1.2rem; line-height: 1.8;">{settings?.aboutText}</p>
    </section>

    <section id="warsztaty">
        <h2>Nasze Warsztaty</h2>
        <div class="grid">
            {workshops?.map((w) => (
                    <article class="card">
                        {w.image && <img src={urlFor(w.image).width(400).height(250).url()} alt={w.title} />}
                        <div class="card-content">
                            <h3>{w.title}</h3>
                            <p>{w.description}</p>
                        </div>
                    </article>
            ))}
        </div>
    </section>

    <section id="oferta">
        <h2>Oferta edukacyjna</h2>
        <p>{settings?.offerText}</p>
        <div class="topics-list">
            {settings?.topics?.map((topic) => (
                    <li>{topic}</li>
            ))}
        </div>
    </section>
</main>

<footer>
    <p>Chcesz nas odwiedziƒá?</p>
    <a href={settings?.facebookUrl} class="btn" target="_blank">Znajd≈∫ nas na Facebooku</a>
</footer>

</body>
</html>
